{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "app/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "~root/*": ["*"],
      "~type/*": ["src/types/*"],
      "~hook/*": ["src/client/hooks/*"]
    }
  }
}