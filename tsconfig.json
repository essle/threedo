{
  "compilerOptions": {
    "outDir": "./app",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "~root/*": ["./*"],
      "~type/*": ["./src/types/*"],
      "~hook/*": ["./src/client/hooks/*"],
      "~context/*": ["./src/client/context/*"],
      "~class/*": ["./src/server/classes/*"],
      "~test": ["./tools/test/index"],
      "~test/*": ["./tools/test/*"]
    }
  }
}