{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "./src/**/__mocks__/*", 
    "./src/**/__tests__/*"
  ]
}